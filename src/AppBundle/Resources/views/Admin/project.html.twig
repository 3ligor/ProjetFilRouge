{% extends "AppBundle::layout.html.twig" %}

{% block content %}
	{% include "AppBundle:Admin:menuAdmin.html.twig" with {'default' : 'project'} %}
	<div class="row">
		<table class="table table-condensed table-hover">
			<th>Type</th>
			<th>Intitulé</th>
			<th class="text-center">Date de création</th>
			<th class="text-center">Date de début</th>
			<th class="text-center">Date de fin</th>
			<th class="text-center">Validation</th>
				{% for project in projects %}
				<tr>
					<td>
						{% for categorie in project.categories %}
							{{ loop.last ? categorie.title : categorie.title~' - ' }}
						{% endfor %}
					</td>
					<td>
						{{project.title}}
					</td>
					<td class="text-center">
						{{project.creationDate|date('d-m-Y')}}
					</td>
					<td class="text-center">
						{{project.startDate|date('d-m-Y')}}
					</td>
					<td class="text-center">
						{{project.endDate|date('d-m-Y')}}
					</td>
					<td class="text-center">
						{% if project.status == 0 %}
							<span class="glyphicon glyphicon-check text-success"></span>
							<span class="glyphicon glyphicon-remove-circle text-danger"></span>
						{% elseif project.status < 4 and project.status > 1 %}
							<span class="glyphicon glyphicon-check text-success"></span>
							<span class="glyphicon glyphicon-remove-circle text-danger"></span>
						{% elseif project.status >= 4 %}
							<span class="glyphicon glyphicon-ok text-success"></span>
							<span class="glyphicon glyphicon-remove-circle text-muted"></span>
						{% else %}
							<span class="glyphicon glyphicon-check text-muted"></span>
							<span class="glyphicon glyphicon-remove text-danger"></span>
						{% endif %}	
					</td>
				</tr>
			{% endfor %}
		</table>
	</div>
{% endblock content %}

